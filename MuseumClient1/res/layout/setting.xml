<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.museum_client.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:background="#E7E5E4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        >
<RelativeLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#0099cc"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="博&amp;导"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:orientation="vertical" 
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="matrix"
                android:src="@drawable/qingmingshanghetu" />

            <TextView
                android:id="@+id/Museum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MUSEUM"
                android:textColor="#000"
                android:textSize="20sp" >
            </TextView>>

            <TextView
                android:id="@+id/Museum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="v1.0.0.2014"
                android:textColor="#988F89"
                android:textSize="12sp"
                 
                >
            </TextView>>
        </LinearLayout>

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
               	>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="版本更新"
                        android:textColor="#000"
                        android:textSize="18sp" 
                        android:background="#FFFFFF"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu_normal" />
                </RelativeLayout>
            </LinearLayout>

                <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E7E5E4"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="功能介绍"
                        android:textColor="#000"
                        android:textSize="18sp" 
                        android:background="#FFFFFF"
                        android:onClick="function"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu_normal" />
                </RelativeLayout>
            </LinearLayout>

                <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E7E5E4"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="帮助反馈"
                        android:textColor="#000"
                        android:textSize="18sp" 
                        android:background="#FFFFFF"
                        android:onClick="helpClick"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu_normal" />
                </RelativeLayout>
            </LinearLayout>

                <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E7E5E4"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="清除缓存"
                        android:textColor="#000"
                        android:textSize="18sp" 
                        android:background="#FFFFFF"
                        android:onClick="Clearcache"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu_normal" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>